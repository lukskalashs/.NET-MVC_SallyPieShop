@model Pie

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Name</h2>

<div class="bg-light m-3 p-4">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    <h3 class="text-right">@Model.Price.ToString("c")</h3>
    <h3>
        @Model.Name
    </h3>
    <h4>@Model.ShortDescription</h4>
    <p>@Model.LongDescription</p>
</div>